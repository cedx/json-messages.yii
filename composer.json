{
  "description": "JSON and YAML message sources for the Yii Framework.",
  "homepage": "https://dev.belin.io/yii2-json-messages",
  "license": "MIT",
  "name": "cedx/yii2-json-messages",
  "type": "yii2-extension",
  "authors": [
    {"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
  ],
  "autoload": {
    "psr-4": {"yii\\i18n\\": "lib/"}
  },
  "autoload-dev": {
    "psr-4": {"yii\\i18n\\": "test/"}
  },
  "config": {
    "fxp-asset": {"enabled": false},
    "optimize-autoloader": true
  },
  "funding": [
    {"type": "patreon", "url": "https://www.patreon.com/cedx"}
  ],
  "keywords": [
    "catalog",
    "i18n",
    "internationalization",
    "json",
    "locale",
    "messages",
    "translation",
    "yaml",
    "yii2"
  ],
  "repositories": [
    {"type": "composer", "url": "https://asset-packagist.org"}
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "ext-pcre": "*",
    "ext-spl": "*",
    "symfony/yaml": "^4.4.6 || ^5.0.6",
    "yiisoft/yii2": "^2.0.34"
  },
  "require-dev": {
    "cedx/coveralls": "^12.0.0",
    "consolidation/robo": "^2.0.3",
    "phpstan/phpstan": "^0.12.18",
    "phpunit/phpunit": "^9.0.1"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/yii2-json-messages/api",
    "issues": "https://github.com/cedx/yii2-json-messages/issues"
  }
}
