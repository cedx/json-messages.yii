{
  "description": "JSON and YAML message sources for the Yii Framework.",
  "homepage": "https://dev.belin.io/yii2-i18n-messages",
  "license": "MIT",
  "name": "cedx/yii2-i18n-messages",
  "type": "yii2-extension",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"yii\\i18n\\": "lib/"}
  },
  "autoload-dev": {
    "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"],
    "psr-4": {"yii\\i18n\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "i18n",
    "internationalization",
    "json",
    "locale",
    "messages",
    "translation",
    "yii2"
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-json": "*",
    "ext-pcre": "*",
    "ext-spl": "*",
    "symfony/yaml": "^4.1.4",
    "yiisoft/yii2": "^2.0.15"
  },
  "require-dev": {
    "cedx/coveralls": "^9.0.1",
    "consolidation/robo": "^1.3.1",
    "henrikbjorn/lurker": "^1.2.0",
    "phpstan/phpstan": "^0.10.3",
    "phpunit/phpunit": "^7.3.2"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/yii2-i18n-messages/api",
    "issues": "https://github.com/cedx/yii2-i18n-messages/issues"
  }
}
