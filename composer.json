{
  "description": "JSON and YAML message sources for the Yii Framework.",
  "homepage": "https://dev.belin.io/yii2-json-messages",
  "license": "MIT",
  "name": "cedx/yii2-json-messages",
  "type": "yii2-extension",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin",
    "homepage": "https://belin.io",
    "role": "Developer"
  }],
  "autoload": {
    "psr-4": {"yii\\i18n\\": "lib/"}
  },
  "autoload-dev": {
    "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"],
    "psr-4": {"yii\\i18n\\": "test/"}
  },
  "config": {
    "fxp-asset": {"enabled": false},
    "optimize-autoloader": true
  },
  "keywords": [
    "catalog",
    "i18n",
    "internationalization",
    "json",
    "locale",
    "messages",
    "translation",
    "yaml",
    "yii2"
  ],
  "repositories": [
    {"type": "composer", "url": "https://asset-packagist.org"}
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-json": "*",
    "ext-pcre": "*",
    "ext-spl": "*",
    "symfony/yaml": "^4.2.3",
    "yiisoft/yii2": "^2.0.16"
  },
  "require-dev": {
    "cedx/coveralls": "^9.1.2",
    "consolidation/robo": "^1.4.3",
    "henrikbjorn/lurker": "^1.2.0",
    "phpstan/phpstan": "^0.11.1",
    "phpunit/phpunit": "^7.5.4"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/yii2-json-messages/api",
    "issues": "https://github.com/cedx/yii2-json-messages/issues"
  }
}
